<h1>Movie #<%=@movie_id%> details</h1>

<a href="/movies" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_movie/<%=@movie_id%>" class="btn btn-block btn-outline-secondary">
  Delete movie
</a>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%=@the_movie.title%>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%=@the_movie.year%>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%=@the_movie.duration%>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%=@the_movie.description%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="http://robohash.org/<%=@the_movie.title%>" style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <%=@director_name%>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=time_ago_in_words(@the_movie.created_at)%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=time_ago_in_words(@the_movie.updated_at)%>
  </dd>
</dl>
